<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DormText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DormNoneText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tip_color</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="InfoText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="InputTextCenter">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="NumText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tip_color</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="TipLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tip_color</item>
    </style>

    <style name="TipLabelCenter">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tip_color</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="InfoLabel">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/tip_color</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>